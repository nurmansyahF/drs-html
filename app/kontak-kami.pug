extends templates/layout.pug

block vars
  - var activepage = "kontak-kami";
  - var headerType = "";

  include templates/dbcontent.pug


block content
  .kontak
    section.section.xl.kontak-top
      .container
        .row.justify-content-center
          .col-lg-10
            .section-title
              .row
                .col-lg-9
                  .tag Kontak Kami
                  h1 Kami dengan senang hati berkolaborasi dengan bisnis Anda
                  .sub-desc
                    p Silakan hubungi kami untuk memulai kolaborasi, berbagi ide, atau menjalin kemitraan bisnis.
            .row.justify-content-between
              .col-lg-7
                .kontak-form
                  form(action="#")
                    h4 Isi formulir pertanyaan di bawah ini
                    .form-group
                      label Nama
                      input.form-control(type="text" placeholder="Isi nama Anda di sini")
                    .form-group
                      label Nama perusahaan
                      input.form-control(type="text" placeholder="Isi nama perusahaan di sini")
                    .form-group
                      label Alamat email
                      input.form-control(type="email" placeholder="Isi alamat email di sini")
                    .form-group
                      label Nomor HP
                      input.form-control(type="text" placeholder="Isi nomor HP di sini")
                    .form-group
                      label Pesan
                      textarea.form-control(placeholder="Tulis pesan di sini" rows="5")
                    .form-action
                      button.btn.btn-primary(type="submit") Kirim pesan
              .col-lg-3
                .kontak-box
                  .kontak-item
                    b Hubungi kami
                    .w-icon
                      img.svg(src="images/kontak-item-ic-1.svg", alt="icon")
                      a(href="tel:+021 6828 8377") +021 6828 8377
                  .kontak-item
                    b WhatsApp kami
